{
    "name": "kalnoy/cruddy",

    "description": "Backend interface for handling CRUD operations on your Laravel Eloquent models.",

    "authors": [
        {
            "name": "Alexander Kalnoy",
            "email": "lazychaser@gmail.com"
        }
    ],

    "keywords": [ "dashboard", "crud", "administrator", "admin", "backend", "laravel", "eloquent", "cms" ],

    "license": "MIT",

    "require": {
        "php": ">=7.0.0",
        "laravel/framework": "5.5 - 5.8",
        "intervention/image": "~2.0",
        "kalnoy/illuminate-menu": "~1.3"
    },

    "autoload": {
        "classmap": [
            "src/exceptions.php"
        ],

        "psr-4": { "Kalnoy\\Cruddy\\": "src/" }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "v0.5.6-dev"
        },

        "laravel": {
            "providers": [
                "Kalnoy\\Cruddy\\CruddyServiceProvider"
            ],

            "aliases": {
                "Cruddy": "Kalnoy\\Cruddy\\Facades\\Cruddy"
            }
        }
    }
}
